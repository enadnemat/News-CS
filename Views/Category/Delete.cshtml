@{
    ViewData["Title"] = "Edit Category";
}
@model Category

<form method="post">
    <input asp-for="Id" hidden/>
    <div class="border p-3 mt-4 ">
        <div class="row pb-2">
            <h2>Delete Category</h2>
            <hr />
        </div>
        <div class="mb-3 row p-1">
            <label class="p-0" asp-for="Name"></label>
            <input asp-for="Name" disabled class="form-control" />
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="Description" class="p-0"></label>
            <textarea asp-for="Description" disabled class="form-control">
            </textarea>
        </div>
        <div class="row">
            <div class="col-6">
                <button class="btn btn-danger form-control">Delete</button>
            </div>
            <div class="col-6">
                <a asp-controller="Category" asp-action="Index" class="btn btn-outline-secondary form-control"> Category List</a>
            </div>
        </div>
    </div>
</form>
